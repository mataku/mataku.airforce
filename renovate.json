{
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^.github/workflows/build.yml$"],
      "matchStrings": [".*echo 'HUGO_VERSION=(?<currentValue>.*?)'.*\n"],
      "depNameTemplate": "gohugoio/hugo",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "enabled": false
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies"],
      "enabled": false
    }
  ]
}
